{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "types": [
      "react",
      "jest",
      "@types/testing-library__jest-dom",
      "jest-styled-components"
    ],
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
