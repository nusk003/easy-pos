<html>
  <head>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        background: white;
        width: 72mm;
      }

      body {
        color: black;
        padding-top: 20px;
        padding: 0 12px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica,
          Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji';
      }
    </style>
  </head>
  <body>
    <svg style='
      position: relative;
      left: calc(36mm - 39px); 
      height: 78px;
      width: 78px;
    '>
      <rect 
        width='78px' 
        height='78px' 
        rx='25px' 
        fill='black'
      />
      <path 
        d='M62 39.5C62 51.3741 52.1503 61 40 61C27.8497 61 18 51.3741 18 39.5C18 27.6259 27.8497 18 40 18C52.1503 18 62 27.6259 62 39.5ZM23.1707 39.5C23.1707 48.5833 30.7055 55.9468 40 55.9468C49.2945 55.9468 56.8293 48.5833 56.8293 39.5C56.8293 30.4167 49.2945 23.0532 40 23.0532C30.7055 23.0532 23.1707 30.4167 23.1707 39.5Z' 
        fill='white'
      />
    </svg>

    <div style='
      margin-top: 20px;
      text-align: center; 
      font-size: 28px;
      font-weight: 700;
    '>
      #{{orderReference}}
    </div>

    <div style='
      margin-top: 8px;
      text-align: center; 
      font-size: 14px;
    '>
      <span style='font-weight: 600'>
        Date:
      </span> 
      {{dateCreated}}
    </div>

    <div style='
      margin-top: 12px;
      text-align: center; 
      font-size: 18px;
      font-weight: 500;
    '>
      {{guest.firstName}} {{guest.lastName}}
    </div>

    <div style='
      text-align: center; 
      font-size: 20px;
      font-weight: 700;
    '>
      {{deliveryType}} ({{location}})
    </div>

    <div style='
      text-align: center; 
      font-size: 18px;
      margin-top: 16px;
      font-weight: 500;
    '>
      {{payment}}
    </div>


    <svg style='margin: 30px 0;' width='100%' height='1' fill='none'>
      <line 
        x1='0.5' 
        y1='0.5' 
        x2='100%' 
        y2='0.5' 
        stroke='black' 
        stroke-linecap='round' 
        stroke-dasharray='5 5'
      />
    </svg>


    <div style='
      font-weight: 700;
      font-size: 14px;
    '>
      {{pricelistName}} from {{spaceName}}
    </div>

    <table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin-top: 30px;">
      {{#each items}}
      <tr>
        <td valign="top"
          style="width: auto; padding-right: 16px; font-weight: 700; font-size: 14px;">
          {{this.quantity}}x
        </td>

        <td valign="top"
          style="width: 100%; margin: 0 8px; font-size: 14px; padding-bottom: 12px">
          {{this.name}}
          <div style="color: gray">
            {{#each this.options}}
            <div>
              - {{this.name}}
            </div>
            {{/each}}
          </div>
        </td>
      </tr>
      {{/each}}
    </table>


    {{#if notes}}
    <svg style='margin: 30px 0;' width='100%' height='1' fill='none'>
      <line 
        x1='0.5' 
        y1='0.5' 
        x2='100%' 
        y2='0.5' 
        stroke='black' 
        stroke-linecap='round' 
        stroke-dasharray='5 5'
      />
    </svg>

    <div style='
      font-weight: 700;
      font-size: 14px;
    '>
      Notes
    </div>

    <div style='
      margin-top: 20px;
      margin-bottom: 20px;
      font-size: 14px;
    '>
      {{notes}}
    </div>
    {{/if}}

    <svg style='padding-top: 30px;' width='100%' height='1px' fill='none'>
      <line x1="1px" x2='1.5px' stroke='gray' />
    </svg>
  </body>
</html>